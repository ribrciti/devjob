<%= form_with(model: job, local: true, multipart: true) do |form| %>
  <% if job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
        <% job.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="container ">
  <div class="justify-content-start  ">
    <%= form.label :company_logo, class: "form-label" %>
    <%= form.file_field :company_logo %>
    <span class="justify-content-end ">
      <% if form.object.company_logo.attached? %>
        <%= image_tag form.object.company_logo, style: "max-width: 60px", class: "input"%>
      <% end %>
    </span>
  </div>


  <div class="form-group">
    <%= form.label :title, class: "label" %>
    <%= form.rich_text_area :title, size: '48', class: "input" %>
  </div>


  <div class="form-group">
    <%= form.label :description, class: "label" %>
    <%= form.rich_text_area :description, class: "input" %>
  </div>

  <div class="row ml-2">
    <div class="form-group">
      <%= form.label :company_name, class: "label" %> <br>
      <%= form.text_field :company_name, size: '48', class: "input" %>
    </div>

    <div class="form-group ">
      <%= form.label :link_to_apply, class: "label" %> <br>
      <%= form.text_field :link_to_apply, size: '48', class: "input" %>
    </div>
  </div>

  <div class="row ml-2">
    <div class="form-group">
      <%= form.label :company_website, class: "label" %><br>
      <%= form.text_field :company_website, size: '48', class: "input" %>
    </div>

    <div class="form-group ">
      <%= form.label :headquarters, class: "label" %> <br>
      <%= form.text_field :headquarters, size: '48', class: "input" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :company_description, class: "label" %>
    <%= form.rich_text_area :company_description, class: "input" %>
  </div>

  <div class="row ml-2">

    <div class="form-group  mr-4">
      <%= form.label :compensation_range, class: "label" %><br>
      <%= form.text_field :compensation_range, size: '16', class: "input" %>
    </div>

    <div class="form-group mr-4">
      <%= form.label :estimated_hours, class: "label" %><br>
      <%= form.text_field :estimated_hours, size: '10', class: "input" %>
    </div>

    <div class="form-group mr-4">
      <%= form.label :years_of_experience, class: "label" %><br>
      <%= form.text_field :years_of_experience, size: '4', class: "input ml-4" %>
    </div>


    <div class="form-group  mr-4">
      <%= form.label :compensation_type, class: "label" %> <br>
      <%= form.select :compensation_type, Job::COMPENSATION_TYPES,{}, { class: "select" } %>
    </div>

    <div class="form-group ml-4">
      <br>
      <%= form.check_box :remote, class: "input " %>
      <%= form.label :remote, class: "label" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.submit class: "ml-2 btn btn-sm btn-success font-weight-bold" %>
  </div>

<% end %>
</div>

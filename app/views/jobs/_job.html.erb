<div class="container relative text-dark mt-4 ml-4">
  <div class="card">
    <div class="justify-content-start">
      <% if job.company_logo.attached? %>
          <%= image_tag job.company_logo.variant(resize_to_fit: [24, 24]), class: "" %>
      <% end %>
      <span class="font-weight-bold text-dark"><%= job.company_name %></span>
    </div>

    <div class="d-flex justify-content-end mr-2 mt-0">
      <% if admin? %>
        <%= link_to 'Edit', edit_job_path(job) , class: "btn btn-sm btn-outline-dark mr-3 font-weight-bold px-3" %>
        <%= link_to 'Delete', job, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-sm btn-danger" %>
      <% end %>
    </div>

    <div>
      <% if job.featured? %>
        <span class="p-2  ml-4  rounded-pill bg-warning font-weight-bold">Featured</span>
      <% end %>
    </div>

    <p><%= link_to job.title, job_path(job_id = job.id), class: "job-title"   %></p>

    <p class="mb-0 ">
      <%= job.compensation_type %> <span class="p-2">&bull;</span>
      <% if job.compensation_type.downcase == "contract" %>
        <%= job.estimated_hours %> hours
      <% else %>
        <%= number_to_currency(job.compensation_range) %><span class="p-2">&bull;</span>
        <%= pluralize(job.years_of_experience, 'year') %> of experience
      <% end %>
    </p>
    <p>
      <% if job.remote? %>
        Remote &bull;
      <% end %>
      <%= job.headquarters %>
    </p>
  </div>
</div>


